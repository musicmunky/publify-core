<% if @picks.empty? %>
  <tr>
    <td colspan="5">
      No Picks
    </td>
  </tr>
<% end %>

<% for pick in @picks %>
  <tr>
    <td>
      <%= link_to_permalink(pick, pick.title) %>
      <%= show_actions pick %>
    </td>
    <td>
      <%= pick.author %>
      <small><%= l(pick.created_at) %></small>
    </td>
    <td>
        <% chkd = "" %>
        <% if pick.active %>
            <% chkd = "checked" %>
        <% end %>
      <input type="checkbox" class="active_picks_chk" id="pick_active_<%= pick.id %>" <%= chkd %> onchange="checkActivePicks(this)" />
    </td>
    <td>
      <%= pick.picktype %>
    </td>
  </tr>
<% end %>

<%#= display_pagination(@picks, 5) %>