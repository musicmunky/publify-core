<% unless sidebar.archives.blank? %>
  <h3 class="sidebar-title">
      <span class="glyphicon glyphicon-folder-open sidebartags sidebararchive" aria-hidden="true"></span><%= sidebar.title %>
  </h3>
  <div class="sidebar-body">
    <ul id="archives">
      <% sidebar.archives.each do |month| %>
        <% counter = sidebar.show_count.to_s == "1" ? "<em>(#{month[:article_count]})</em>" : "" %>
        <li>
          <%= link_to"#{month[:name]} #{counter}".html_safe,  articles_by_month_path(month[:year], "%02i" % month[:month]) %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
