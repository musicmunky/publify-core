<% unless sidebar.tags.blank? %>
  <h3 class="sidebar-title">
      <span class="glyphicon glyphicon-tags sidebartags" aria-hidden="true"></span><%= t(".tags")%>
  </h3>
  <div class="sidebar-body">
    <p style="overflow:hidden">
    <% sidebar.tags.each do |tag| %>
      <span class="taglinks" style="font-size:<%= sidebar.sizes[tag] %>%"><%= link_to "#" + tag.display_name, tag_url(tag.name) %></span>
    <% end %>
    </p>
  </div>
<% end %>
